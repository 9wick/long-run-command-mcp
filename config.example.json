{
  "outputdir": "./logs",
  "commands": {
    "build": {
      "workdir": "./",
      "command": "npm run build"
    },
    "test": {
      "workdir": "./",
      "command": "npm test",
      "additionalArgs": true,
      "description": "run test. If you want to run a specific test, use `npm test -- -t <test-name>`"
    },
    "lint": {
      "workdir": "./",
      "command": "npm run lint"
    },
    "typecheck": {
      "workdir": "./",
      "command": "npm run check:type"
    }
  }
}
